<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.danijela.sparkle.viewmodel.UserItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel::onItemClick}"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_1" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/user_image"
                android:text="@{viewModel.item.fullName}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progress_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:text="3 days streak"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/green_indicator"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/habit_title"
                android:layout_below="@+id/user_name"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/user_image"
                android:text="@{viewModel.item.description}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>